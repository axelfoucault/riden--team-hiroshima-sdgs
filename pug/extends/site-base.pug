include /includes/variables
include /includes/functions
include /includes/mixin

block vars
  //-
    1.タイトル設定
      配列の1番目は通常のタイトルタグ、2番目はog用のタイトルタグです。
      2番目を削除すると、通常のタイトルタグと共有されます。
      通常タグと共有の例: - var title = ['タイトル'];
    2.ディスクリプション設定
      タイトル設定と同様の形になります。
      2番目の配列を記述するとogタグ用のディスクリプションが設定されます。
      通常タグ+ogタグ用: - var desc = ['ディスクリプション','ogディスクリプション'];

  //- サイト全体のmeta情報
  - var title    = ['タイトル', 'ogタグ用タイトル'];
  - var desc     = ['ディスクリプション', 'ogディスクリプション'];
  - var keyword  = 'キーワード,キーワード';
  - var siteName = 'サイト名';
  - var ogUrl    = 'http://hoge.com/';
  - var ogImg    = 'http://hoge.com/hoge.png';
  - var ogType   = 'website';

  //- body の id, class 設定
  - var bodyAttrs = {};

block html
  doctype html
  html(lang="ja")
    block head
      head
        block meta
          include /includes/meta.pug
          meta(http-equiv="X-UA-Compatible" content="IE=edge")
          //- ピンチでズームさせない
          meta(name="viewport" content="width=device-width,initial-scale=1.0,user-scalable=no,maximum-scale=1")
          //- ピンチでズームさせる
            meta(content="width=device-width,initial-scale=1" name="viewport")
          meta(name='format-detection', content='telephone=no')
        //-block ogp
          include /includes/ogp.pug
        block styles
          link(rel="stylesheet" href=relative('styles/style.css'))
        //-block scripts
          script(src=relative('scripts/bundle.js'))
        //-block else
          link(rel="shortcut icon" href=favicon)
          link(href="/favicon.ico" rel="shortcut icon", type="image/ico")
          include /includes/tags.pug
    block body
      body&attributes(bodyAttrs)
        block body-contents
        block modal